<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.LechWidgets.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:soundEffectsEnabled="true"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:clipToOutline="true"
    android:background="@drawable/round_corner"
    android:theme="@style/Theme.LechWidgets.AppWidgetContainer"
    tools:targetApi="s"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="38dp">

    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#CC000000"
        android:background="@drawable/round_corner_bar"
        android:orientation="horizontal"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/googleImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/google"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground" />


        <TextView
            android:id="@+id/searchText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end">
            <ImageView
                android:id="@+id/micImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/lech_bing_description"
                android:scaleType="centerCrop"
                android:src="@drawable/mic"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"/>
            <ImageView
                android:id="@+id/lensImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/lech_bing_description"
                android:scaleType="centerCrop"
                android:src="@drawable/lens"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>