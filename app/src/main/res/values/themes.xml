    <style name="Theme.LechWidgets" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Theme.LechWidgets.WidgetTheme" parent="Theme.Material3.DayNight">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius" tools:targetApi="s">
            @dimen/rounded_corners
        </item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius" tools:targetApi="s">
            @dimen/rounded_corners_inner
        </item>
    </style>

    <style name="Theme.LechWidgets.AppWidgetContainer" parent="Theme.LechWidgets.WidgetTheme">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">0dp</item>
    </style>
</resources>